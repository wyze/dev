    "kysely": "catalog:",
    "kysely-d1": "catalog:",
    "kysely-plugin-serialize": "catalog:",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.8.49",
    "@types/better-sqlite3": "catalog:",
    "@types/node": "catalog:",
    "@wyze/typescript-config": "workspace:*",
    "@wyze/vite-config": "workspace:*",
