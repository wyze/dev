    "check": "biome check --write .",
    "db:generate": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) pnpx @better-auth/cli generate --output=\"db/schema.sql\" --config db/generate.ts --yes",
